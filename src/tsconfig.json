{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "rrule",
      "node",
      "jasmine"
    ]
  }
}
